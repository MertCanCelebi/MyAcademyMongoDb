@model List<JadooTravel.Dtos.DestinationDtos.ResultDestinationDto>

<div class="card-body p-4">
    <div class="d-flex mb-4 justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold">Son Eklenen Turlar</h5>

    </div>

    <div class="table-responsive" data-simplebar>
        <table class="table table-borderless align-middle text-nowrap">
            <thead>
                <tr>
                    <th scope="col">Görsel</th>
                    <th scope="col">Tur</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">Kapasite</th>
                    <th scope="col">Açıklama</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" width="150" class="rounded-3" alt="@item.CityCountry" />
                        </td>
                        <td>
                            <div>
                                <h6 class="mb-1 fw-bolder">@item.CityCountry</h6>
                                <p class="fs-3 mb-0 text-muted">@item.DayNight</p>
                            </div>
                        </td>
                        <td>
                            <p class="fs-3 fw-normal mb-0">@item.Price.ToString("C0")</p>
                        </td>
                        <td>
                            <span class="badge bg-light-primary rounded-pill text-primary px-3 py-2 fs-3">
                                @item.Capacity kişi
                            </span>
                        </td>
                        <td>
                            <p class="fs-3 fw-normal mb-0">@item.Description</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
