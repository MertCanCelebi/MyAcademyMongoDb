@model List<JadooTravel.Dtos.DestinationDtos.ResultDestinationDto>

<div class="col-lg-8 d-flex align-items-stretch">
    <div class="card w-100 shadow-sm">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h5 class="card-title fw-semibold mb-0">Turların Kapasitesi</h5>
                    <p class="text-muted fs-2 mb-0">Her turun toplam kapasitesi</p>
                </div>
            </div>

            <div id="capacityChart" style="height:400px;"></div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
    (function(){
        // Verileri JSON olarak al
        var destinations = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(x => x.CityCountry)));
        var capacities = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Select(x => x.Capacity)));

        var options = {
            chart: {
                type: 'bar',
                height: 400
            },
            series: [{
                name: 'Kapasite',
                data: capacities
            }],
            xaxis: {
                categories: destinations
            },
            colors: ['#0d6efd']
        };

        var chart = new ApexCharts(document.querySelector("#capacityChart"), options);
        chart.render();
    })();
</script>
