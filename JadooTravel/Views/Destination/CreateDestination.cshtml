@model JadooTravel.Dtos.DestinationDtos.CreateDestinationDto
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <h3>Yeni Tur Ekle</h3>
    <form method="post">
        <input type="text" asp-for="CityCountry" placeholder="Şehir/Ülke Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="ImageUrl" placeholder="Fotoğraf URL Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="Price" placeholder="Fiyat Giriniz" class="form-control" />
        <br />
        <input type="text" asp-for="DayNight" placeholder="Gün-Gece Sayısı" class="form-control" />
        <br />
        <input type="text" asp-for="Capacity" placeholder="Kapasite Giriniz" class="form-control" />
        <br />
        <textarea asp-for="Description" placeholder="Tur Açıklaması Giriniz" rows="5" class="form-control"></textarea>
        <br />
        <button class="btn btn-primary">Turu Ekle</button>
    </form>
</div>